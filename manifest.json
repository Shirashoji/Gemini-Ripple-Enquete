{
  "manifest_version": 3,
  "name": "Gemini Ripple Enquete Reviewer",
  "version": "1.0",
  "description": "Gemini APIを使用して、Rippleのアンケート内容をレビューします。",
  "permissions": ["storage"],
  "host_permissions": [
    "https://ripple-lms.example.com/enquete",
    "https://generativelanguage.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://ripple-lms.example.com/enquete"],
      "js": ["node_modules/marked/lib/marked.umd.js", "content.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["node_modules/marked/lib/marked.umd.js"],
      "matches": ["https://ripple-lms.example.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/png/icon16.png",
      "48": "icons/png/icon48.png",
      "128": "icons/png/icon128.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "icons": {
    "16": "icons/png/icon16.png",
    "48": "icons/png/icon48.png",
    "128": "icons/png/icon128.png"
  }
}
